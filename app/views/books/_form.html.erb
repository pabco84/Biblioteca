<%= form_with(model: book, local: true) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Titulo" %>
    <%= f.text_field :title, placeholder: "ingresa un titulo", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :author, "Autor" %>
    <%= f.text_field :author, placeholder: "ingresa un Autor", class: 'form-control' %>
  </div>


 <div class="form-group">
    <%= f.label :status, "Estado" %>
    <%= f.select :status, options_for_select(@statuses),{:include_blank => true}, class: 'form-control' %>
  </div>


   <div class="form-group">
    <%= f.label :borrowing_date, "Fecha de prestamos" %>
    <%= f.date_field :borrowing_date, class: 'form-control' %>
  </div>

   <div class="form-group">
    <%= f.label :return_date,"Fecha de Devolucion" %>
    <%= f.date_field :return_date, class: 'form-control' %>
  </div>



  <div class = 'actions'>
    <%= f.submit %>
  </div>
<% end %>