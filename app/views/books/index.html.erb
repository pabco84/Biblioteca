
<div class="container">

<%= render 'shared/navbar' %>
<p id="notice"><%= notice %></p>
<h1>Books</h1>
<table class="table table-dark">
    <thead>
        <tr>
        <th><%= sort_link(@q, :title, 'Titulo') %></th>
        <th>Author</th>
        <th>Status</th>
        <th>Borrowing date</th>
        <th>Return date</th>
        <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.borrowing_date %></td>
        <td><%= book.return_date %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', book_edit_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'quieres eliminar este librito ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Book', books_new_path %>

</div>
